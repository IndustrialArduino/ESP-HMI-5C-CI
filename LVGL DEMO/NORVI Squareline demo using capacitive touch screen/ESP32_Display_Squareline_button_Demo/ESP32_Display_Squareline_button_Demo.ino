void BUTTON_ON(lv_event_t * e)
{
  writeOutput(GPIO5, 1);
  writeOutput(GPIO6, 1);
  writeOutput(GPIO7, 1);
  writeOutput(GPIO8, 1);
  Serial.println( "on" );

}

void BUTTON_OFF(lv_event_t * e)
{
  writeOutput(GPIO5, 0);
  writeOutput(GPIO6, 0);
  writeOutput(GPIO7, 0);
  writeOutput(GPIO8, 0);
  Serial.println( "off" );

  delay(300);
}

